@model Tran_Zachary_HW5.Models.OrderDetail

@{
    ViewData["Title"] = "Order Detail";
}

<h1>Create Order Detail</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden field for Order ID -->
            <input type="hidden" asp-for="Order.OrderID" />

            <!-- Dropdown for Product selection -->
            <div class="form-group">
                <label for="SelectedProducts" class="control-label">Product</label>
                @Html.DropDownList("SelectedProduct", (SelectList)ViewBag.Products, "-- Select Product --", new { @class = "form-control" })
                <span asp-validation-for="Product.ProductID" class="text-danger"></span>
            </div>

            <!-- Input for Quantity -->
            <div class="form-group">
                @Html.LabelFor(model => model.Quantity, new { @class = "control-label" })
                <input asp-for="Quantity" class="form-control" />
                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
            </div>

            <!-- Submit button -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

